@model IEnumerable<CICSWebPortal.Models.RevenueItem>

@{
    ViewBag.Title = "Add Assessment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("AddAssessment", "Taxpayer", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form",
    @id = "paymentForm",

}))
{
    @Html.AntiForgeryToken()

<div id="breadcrumb">
    <ul class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="#"> Home</a></li>
        <li><i></i><a href="/Taxpayer/"> Taxpayer</a></li>
        <li class="active">Add Assessment</li>
    </ul>
</div><!-- /breadcrumb-->
<div class="main-header">

    <h4>
        Name: @ViewBag.TaxpayerName
        &nbsp; &nbsp; &nbsp;  RIN: @ViewBag.RIN  &nbsp; &nbsp; &nbsp; Email: @ViewBag.Email  &nbsp;
    </h4>
</div><!-- /main-header -->

<div class="panel panel-default table-responsive">
    <div class="panel-heading">
        <a class="btn btn-default" href="/edoigr/Taxpayer/">Back</a>&nbsp;&nbsp;
        @*<button class ="btn btn-primary"  role="button">Generate Invoice</button>*@
        @*@Html.ActionLink("Generate Invoice", "AddAssessment", "Taxpayer", new { }, new { role = "button", @class = "btn btn-primary" })*@
        <span class="label label-info pull-right">
            Total Assessments:  @{
                if (Model.Any())
                {
                    @Model.Count()
                }
            }
        </span>
    </div>
    <div class="padding-md clearfix">
        <div style="text-align: center"> @ViewBag.displayMessage</div>
        <table class="table table-striped" id="dataTable1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Revenue Code</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th width="5%"></th>
                    @*<th width="5%"></th>*@
                    @*<th width="5%"></th>*@
                </tr>
            </thead>
            <tbody>
                @{int rowNo = 0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rowNo += 1)</td>
                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td> ₦ @Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.ActionLink("Generate Invoice", "GenerateInvoice", "Taxpayer", new { id = item.Code }, new { role = "button", @class = "btn btn-default" })</td>
                        @*<td><a data-target='#edit_modal' role='button' data-edit-id='@Html.DisplayFor(modelItem => item.AgentId)' class='btn btn-default editBtn' data-toggle='modal'><i class='fa fa-edit'></i> Edit</a></td>*@

                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.padding-md -->
</div><!-- /panel -->
<!-- Modal -->
<div class="modal fade" id="add_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
