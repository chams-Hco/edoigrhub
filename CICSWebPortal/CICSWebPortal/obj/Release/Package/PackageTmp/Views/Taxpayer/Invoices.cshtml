@model IEnumerable<CICSWebPortal.Models.Invoice>
@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumb">
    <ul class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="/edoigr/Home/"> Home</a></li>
        <li><i></i><a href="/Taxpayer/"> Taxpayer</a></li>
        <li class="active"> Invoices </li>
    </ul>
</div><!-- /breadcrumb-->
<div class="main-header">

    <h4>  Name: @ViewBag.TaxpayerName
    &nbsp; &nbsp; &nbsp;  RIN: @ViewBag.RIN  &nbsp; &nbsp; &nbsp; Email: @ViewBag.Email  &nbsp; </h4>
</div><!-- /main-header -->

<div class="panel panel-default table-responsive">
    <div class="panel-heading">
        <a class="btn btn-default" href="/edoigr/Taxpayer/">Back</a>&nbsp;&nbsp;
        @* <a data-target='#add_modal' role="button" class="btn btn-primary  btn_add" data-toggle="modal">Add Agent</a>*@
        <span class="label label-info pull-right">
            Total Invoices:  @{
                if (Model.Any())
                {
                    @Model.Count()
                }
            }
        </span>
    </div>
    <div class="padding-md clearfix">
        <div style="text-align: center"> @ViewBag.displayMessage</div>
        @*<div> Name: @ViewBag.TaxpayerName
            &nbsp; &nbsp; &nbsp;  RIN: @ViewBag.RIN  &nbsp; &nbsp; &nbsp; Email: @ViewBag.Email  &nbsp; <br /> 
        </div><br /> <br />*@ 
        <table class="table table-striped" id="dataTable1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Invoice No.</th>
                    <th>Description</th>
                    <th>Amount </th>
                    <th>Amount Paid</th>
                    <th>Revenue Code </th>
                    <th>Entry Date </th>
                    <th>Status</th>
                    @*<th width="5%"></th>
                    <th width="5%"></th>*@
                    @*<th width="5%"></th>*@
                </tr>
            </thead>
            <tbody>
                @{int rowNo = 0; }
                @foreach (var item in Model)
                {
                    HtmlString status = null;
                    if (item.Amount - item.AmountPaid == 0)
                    {
                        status = new HtmlString("<span style='color: green'>Paid</span>");
                    }
                    else if (item.AmountPaid != 0 && item.Amount - item.AmountPaid > 0)
                    {
                        status = new HtmlString("<span style='color: darkred'>Incomplete</span>");
                    }
                    else
                    {
                        status = new HtmlString("<span style='color: red'>Unpaid</span>");
                    } 
                    <tr>
                        <td>@(rowNo += 1)</td>
                        <td>@Html.DisplayFor(modelItem => item.InvoiceNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td> ₦ @Html.DisplayFor(modelItem => item.Amount)</td>
                        <td> ₦ @Html.DisplayFor(modelItem => item.AmountPaid)</td>
                        <td>@Html.DisplayFor(modelItem => item.RevenueCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.EntryDate)</td>
                        <td>@status</td>
                        @*<td>@Html.ActionLink("Pay from Wallet", "PayWithWallet", "Invoice", new { id = item.InvoiceId }, new { role = "button", @class = "btn btn-primary" })</td>*@
                        @*<td>@Html.ActionLink("Pay with Card", "PayWithCard", "Invoice", new { id = item.InvoiceId }, new { role = "button", @class = "btn btn-primary" })</td>*@
                        @*<td><a data-target='#edit_modal' role='button' data-edit-id='@Html.DisplayFor(modelItem => item.AgentId)' class='btn btn-default editBtn' data-toggle='modal'><i class='fa fa-edit'></i> Edit</a></td>*@

                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.padding-md -->
</div><!-- /panel -->
<!-- Modal -->
<div class="modal fade" id="paywithwallet_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id="add_modal_body">
        </div>
    </div>
</div>

<!--Edit User-->
<div class="modal fade" id="paywithcard_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="edit_modal_body">
        </div>
    </div>
</div>
<!--Delete User-->
<div class="modal fade" id="delete_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="delete_content">
        </div>
    </div>
</div>
