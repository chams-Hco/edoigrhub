@model CICSWebPortal.ViewModels.WalletViewModel
@{
    ViewBag.Title = "Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Wallet", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form",
    @id = "walletForm",

}))
{
    @Html.AntiForgeryToken()
    <div id="breadcrumb">
        <ul class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="~/Account/Login"> Home</a></li>
            <li><a href=""> Wallet </a></li>
        </ul>
    </div><!-- /breadcrumb-->
    <div class="main-header">

        <h4>Wallet</h4>
    </div><!-- /main-header -->
        <div>
            <div class="col-md-5">
                <div class="well">
                    <h5>Wallet Balance</h5>
                    <h3 style="text-align: center"> ₦  @Model.Wallet.Amount.ToString("#,0.00") </h3>
                </div>
                <div class="well">
                    <h5><b>Test Card</b></h5>
                    Card Number : 11112222333344445555 <br />
                    CIVN : 000 <br />
                    Exp. Date : 12/20 <br />
                </div>
            </div>
            <div class="col-md-6">


                <div class="well">

                    <div>
                        <h5><b>Fund Wallet</b></h5>
                    </div>
                    <br /><br />
                    <div>
                        <div class="form-group">
                            <label for="payment" class="col-sm-4 control-label">Enter Amount (₦) </label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Payment.Amount, new { @class = "form-control _numberInput", @style = "text-align: center", placeholder = "Amount" })
                                @*<input type="text" style="text-align: center" class="form-control" id="paymentamount"/>*@
                            </div>
                            <div class="col-sm-3">

                                <!-- Button -->
                                @*<button type="submit" class="btn btn-blue">Fund Wallet</button>&nbsp;*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label"></label>
                            <div class="col-sm-5">
                                @Html.TextBox("cardnumber", "", new { @class = "form-control _numberInput", @style = "text-align: center", @placeholder = "Card Number", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label"></label>
                            <div class="col-sm-2">
                                @Html.TextBox("civv", "", new { @class = "form-control _numberInput", @style = "text-align: center", @placeholder = "CVV", @required = "required" })
                            </div>
                            <div class="col-sm-3">
                                @Html.TextBox("expdate", "", new { @class = "form-control", @style = "text-align: center", @placeholder = "Exp. Date", @required = "required" })
                                <!-- Button -->
                                @*<button type="submit" class="btn btn-blue">Complete Payment</button>&nbsp;*@
                            </div>
                            <div class="col-sm-3">
                                <!-- Button -->
                                <button type="submit" class="btn btn-blue">Fund Wallet</button>&nbsp;
                            </div>
                        </div>

                        <div style="text-align: center"> @ViewBag.displayMessage </div>
                    </div>
                </div>


            </div>   
            </div>
}