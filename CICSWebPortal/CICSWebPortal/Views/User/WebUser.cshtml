@model IEnumerable<CICSWebPortal.Models.User>
@{
    ViewBag.Title = "WebUser";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //var client = (CICSWebPortal.Models.Client)ViewBag.Clients;
}

<div id="breadcrumb">
    <ul class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="#"> Home</a></li>
        <li class="active">Web Users</li>
    </ul>
</div><!-- /breadcrumb-->
<div class="main-header clearfix">
    <h3 class="text-center">Manage Web Users</h3>
</div><!-- /main-header -->

<div class="panel panel-default table-responsive">
    <div class="panel-heading">
        <a style="" data-target='#add_modal' role="button" class="btn btn-primary  btn_add" data-toggle="modal">Add Web User</a>
        <span class="label label-info pull-right">
            @{
            if (Model.Any())
            {
                @Model.Count()
        }
            }
        </span>
    </div>
    <div class="padding-md clearfix">
        <table class="table table-striped" id="dataTable1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    @*<th>Zone</th>*@
                    <th>TerminalId</th>
                    <th>TerminalCode</th>
                    
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.TerminalID</td>
                    <td>@item.TerminalCode</td>
                    <td><button data-edit="@item.UserId" class="btn btn-success" > EDIT</button> </td>
                </tr>
                }
            </tbody>
        </table>
    </div><!-- /.padding-md -->
</div><!-- /panel -->
<!-- Modal -->
<div class="modal fade" id="add_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="add_modal_body">
        </div>
    </div>
</div>



@section JavaScript
{
    <script type="text/javascript">
    $(function () {

        $(".btn_add").click(function () {
            $("#add_modal_body").load("/User/CreateWebUser");
        });



        //Load the edit page
        $(".editBtn").click(function () {
            $("#edit_modal_body").load("/Agent/Edit/" + $(this).data("edit-id"));
        });

        //Handle the delete function
        $(".deleteBtn").click(function () {

            $("#delete_content").load("/Agent/Delete/" + $(this).data("delete-id"));
        });

        $('#dataTable1').dataTable({
            "bJQueryUI": true, "order": [[0, "desc"]],
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sEmptyTable": "No Level exist."
            }
  ,
            dom: 'T<"clear">lfrtip',
            tableTools: {
                "sSwfPath": "/swf/copy_csv_xls_pdf.swf",
                "sRowSelect": "os",
                "aButtons": [
                "select_all", "select_none",
            "copy",
            "csv",
            "xls",
            {
                "sExtends": "pdf",
                "sPdfOrientation": "landscape",
                "sPdfMessage": ""
            },
            "print"
                ]
            }
        });


    });

    </script>

}

