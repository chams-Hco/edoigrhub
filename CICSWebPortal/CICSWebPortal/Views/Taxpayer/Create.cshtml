<div class="modal-content col-md-6 col-md-offset-2" style="margin-top: 20px">

    @using (Html.BeginForm("Create", "Taxpayer", FormMethod.Post, new
    {
        @class = "form-horizontal",
        role = "form",
        @id = "regForm",

    }))
    {
        @Html.AntiForgeryToken()

        <div class="modal-header">
            <a href="Index" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></a>
            <h4 class="modal-title" id="myModalLabel">Add New Taxpayer</h4>
        </div>
        <div class="modal-body" style="padding-bottom: 0;">
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
